<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Event Poster Section with Floating Card Style -->
    <androidx.cardview.widget.CardView
        android:id="@+id/eventPosterCard"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardElevation="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/eventPoster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default_event_img_foreground" />
    </androidx.cardview.widget.CardView>

    <!-- Event Details Section -->
    <LinearLayout
        android:id="@+id/list_event_poster_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/eventPosterCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/eventLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_location"
                android:textSize="14sp"
                android:textColor="@color/colorOnSurfaceVariant"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/event_title"
                android:textColor="@color/colorOnSurface"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/eventStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/event_status"
                android:textColor="@color/colorPrimaryVariant"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/geolocationRequirement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/geolocation_requirement"
                android:textColor="@color/colorOnSurfaceVariant"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/eventAvailableSpots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_available_spots"
                android:textSize="14sp"
                android:textColor="@color/colorOnSurfaceVariant"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/eventDaysLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_days_left"
                android:textSize="14sp"
                android:textColor="@color/colorOnSurfaceVariant"
                android:fontFamily="sans-serif" />
        </LinearLayout>
    </LinearLayout>

    <!-- Event Description -->
    <TextView
        android:id="@+id/eventDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/event_description"
        android:textSize="16sp"
        android:textColor="@color/colorOnSurface"
        android:fontFamily="sans-serif"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/list_event_poster_linear_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
