<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Fragments.EventFragment">

    <!-- Header Event Create -->
    <TextView
        android:id="@+id/eventFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create a Event"
        android:textColor="@color/lightOnSurface"
        android:textSize="40sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Header Image Placeholder -->
    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="#D3D3D3"
        android:contentDescription="Event Image Placeholder"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/eventFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
<!--    <<Button-->
<!--    android:id="@+id/removeEventImageButton"-->
<!--    android:layout_width="wrap_content"-->
<!--    android:layout_height="wrap_content"-->
<!--    android:text="Remove Image"-->
<!--    android:layout_margin="16dp"-->
<!--    app:layout_constraintTop_toBottomOf="@id/headerImage"-->
<!--    app:layout_constraintStart_toStartOf="parent"-->
<!--    app:layout_constraintEnd_toEndOf="parent"/>-->

    <!-- Event Name Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Event Name"
        app:layout_constraintTop_toBottomOf="@+id/headerImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Description Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        app:layout_constraintTop_toBottomOf="@+id/textFieldTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Lottery Entry Start Date -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldLotteryStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lottery Entry Start Date"
        app:layout_constraintTop_toBottomOf="@id/textFieldDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:focusable="false">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:inputType="date"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Lottery Entry End Date -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldLotteryEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lottery Entry End Date"
        app:layout_constraintTop_toBottomOf="@id/textFieldLotteryStartDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:focusable="false">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:inputType="date"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Number of Spots Available -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldSpots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number of Spots Available"
        app:layout_constraintTop_toBottomOf="@id/textFieldLotteryEndDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="4"
            android:digits="0123456789"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Max Number of Entrants -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldMaxEntrants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Max Number of Entrants"
        app:layout_constraintTop_toBottomOf="@id/textFieldSpots"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="4"
            android:digits="0123456789"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Cost Field (Decimal with 2 Digits After Decimal) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cost"
        app:layout_constraintTop_toBottomOf="@id/textFieldMaxEntrants"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:digits="0123456789."
            android:maxLength="7"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- GeoLocation Checkbox -->
    <CheckBox
        android:id="@+id/checkBoxGeolocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GeoLocation"
        app:layout_constraintTop_toBottomOf="@id/textFieldCost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cancelButton"
        android:layout_margin="16dp"/>

    <!-- Cancel and Save Buttons -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/cancelButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/saveButton"
        android:layout_margin="16dp"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/saveButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/cancelButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>