<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/list_event_poster_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <!-- Event Poster Placeholder -->
        <ImageView
            android:id="@+id/list_event_poster_placeholder"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:background="@color/posterBackground"
            android:contentDescription="Event Image Placeholder"
            android:layout_margin="16dp"
            android:src="@drawable/ic_default_event_img_foreground" />

        <!-- Real Event Poster -->
        <ImageView
            android:id="@+id/list_event_poster"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:background="@color/posterBackground"
            android:contentDescription="Event Image"
            android:layout_margin="16dp"/>

    </LinearLayout>

    <!-- Event Name -->
    <TextView
        android:id="@+id/eventTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="36dp"
        android:padding="2dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@+id/list_event_poster_linear_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- Event Status -->
    <TextView
        android:id="@+id/eventStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="OPEN/PENDING/CLOSED"
        android:textSize="22dp"
        android:padding="2dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/lightOnSurfaceVariant"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@+id/eventTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- Event Location -->
    <TextView
        android:id="@+id/eventLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/lightOnSurfaceVariant"
        android:text="Location"
        android:textSize="18dp"
        android:padding="2dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@+id/eventStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- Event Available Spots -->
    <TextView
        android:id="@+id/eventAvailableSpots"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/lightOnSurfaceVariant"
        android:text="# Spots Available/OPEN"
        android:textSize="18dp"
        android:padding="2dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@+id/eventLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- Event Days Left -->
    <TextView
        android:id="@+id/eventDaysLeft"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/lightOnSurfaceVariant"
        android:text="# Days Left to Enter"
        android:textSize="18dp"
        android:padding="2dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@+id/eventAvailableSpots"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- Geolocation Requirement -->
    <TextView
        android:id="@+id/geolocationRequirement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/lightOnSurfaceVariant"
        android:text="GeoLocation Required"
        android:textSize="18dp"
        android:padding="2dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@+id/eventDaysLeft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- Event Description -->
    <TextView
        android:id="@+id/eventDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:textColor="@color/lightOnSurfaceVariant"
        android:text="Description"
        android:textSize="18dp"
        android:padding="2dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@+id/geolocationRequirement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/view_qr_code_button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/lightSurfaceContainerHigh"
        android:fontFamily="sans-serif-medium"
        android:text="View QR Code"
        app:layout_constraintEnd_toStartOf="@+id/choose_winners_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventDescription" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/choose_winners_button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/lightSurfaceContainerHigh"
        android:fontFamily="sans-serif-medium"
        android:text="Randomly Choose\nWinning Entrants"
        android:lines="2"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toEndOf="@+id/view_qr_code_button"
        app:layout_constraintTop_toBottomOf="@+id/eventDescription" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/view_entrants_map_button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/lightSurfaceContainerHigh"
        android:lines="2"
        android:fontFamily="sans-serif-medium"
        android:text="Map of Entrants\nin Waiting List"
        android:textSize="12dp"
        app:icon="@android:drawable/ic_dialog_map"
        app:layout_constraintBottom_toTopOf="@+id/edit_event_button"
        app:layout_constraintEnd_toStartOf="@+id/choose_winners_button"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_qr_code_button" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/view_entrants_list_button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/lightSurfaceContainerHigh"
        android:lines="2"
        android:fontFamily="sans-serif-medium"
        android:text="View Entrants\nin Waiting List"
        android:textSize="12dp"
        app:icon="@drawable/ic_person_name_foreground"
        app:layout_constraintBottom_toTopOf="@+id/edit_event_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_entrants_map_button"
        app:layout_constraintTop_toBottomOf="@+id/choose_winners_button" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/edit_event_button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/lightSurfaceContainerHigh"
        android:fontFamily="sans-serif-medium"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_entrants_map_button" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/back_button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/lightSurfaceContainerHigh"
        android:fontFamily="sans-serif-medium"
        android:text="Back"
        app:icon="@drawable/ic_back_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_entrants_map_button" />


</androidx.constraintlayout.widget.ConstraintLayout>